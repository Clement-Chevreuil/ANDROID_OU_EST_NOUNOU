<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SpinnerStyle">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:popupBackground">@drawable/spinner_popup_background</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
    </style>

    <style name="SpinnerDropDownItemStyle" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:layout_height">1000dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:dropDownHeight">800px</item>
        <item name="itemMinHeight">200px</item>
    </style>

    <style name="SpinnerItemStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SpinnerStyle2" parent="Widget.AppCompat.Spinner">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:dropDownVerticalOffset">40dp</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

</resources>